@import "nib"
@import "nib/index"
global-reset()


*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  -ms-box-sizing: border-box
  box-sizing: border-box
  user-select: none




body, html
    margin:0
    position:relative
    font-family:"Arial" , "Helvetica" , sans-serif


body > .app
    width:995px
    height:816px
    background:#e5e5e5


.app
    @import "header"

    @import "navigation"

    @import "content"

    .button
        height:37px
        background: url("/images/misc/button_color.jpg") top left repeat-x
        box-shadow:0px 2px 2px rgba(0,0,0,.5)
        min-width:150px
        float:left
        text-align:center
        font-size:18px
        font-weight:bold
        line-height:37px
        color:#fff
        opacity:.5
        cursor:default
        transition: opacity .5s
       
        &.active
            cursor:pointer
            opacity:1

        