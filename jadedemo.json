{
    "name": "cxappserver",
    "deploy": "/public",
    "welcome": "cxserverapp online. all systems green.",
    
    "apps": [
        {
            "name": "jadedemo",
            "db" : {},
            "views" : "/source/apps/jadedemo/templates/",
            "layout" : "layout/index",
            "paths": [
               
                {
                    "route": "/news",
                    "public": "/",
                    "view" : "news",
                    "data" : {
                        "json" : "/source/apps/jadedemo/data/home.json",
                        "webservice" : "http://"
                    },
                    "js": [
                        {
                            "path": "js/main.js",
                            "src": "/source/apps/jadedemo/main.coffee"
                        }
                    ],
                    "css": [
                        {
                            "src": "/source/apps/jadedemo"
                        }
                    ]
                },
                 {
                    "route": "/",
                    "public": "/",
                    "view" : "home",
                    "data" : {
                        "json" : "/source/apps/jadedemo/data/index.json",
                        "webservice" : "http://"
                    },
                    "js": [
                        {
                            "path": "js/main.js",
                            "src": "/source/apps/jadedemo/main.coffee"
                        }
                    ],
                    "css": [
                        {
                            "src": "/source/apps/jadedemo"
                        }
                    ]
                }
            ]
        }
    ]
}