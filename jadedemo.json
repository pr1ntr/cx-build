{
    "name": "cxappserver",
    "deploy": "/public",
    "welcome": "cxserverapp online. all systems green.",
    
    "apps": [
        {
            "name": "jadedemo",
            "db" : {},
            "views" : "/source/apps/jadedemo/templates/",
            "layout" : "main",
            "paths": [
               
                {
                    "route": "/news",
                    "public": "/",
                    "view" : "news",
                    "data" : {
                        "url" : "http://localhost:1923/data/news.json"
           
                    },
                    "js": [
                        {
                            "path": "js/news.js",
                            "src": "/source/apps/jadedemo/com/news.coffee"
                        }
                    ],
                    "css": [
                        {
                            "src": "/source/apps/jadedemo"
                        }
                    ]
                },
                {
                    "route": "/press",
                    "public": "/",
                    "view" : "press",
                    "data" : {
                        "url" : "http://localhost:1923/data/press.json"
                     
                    },
                    "js": [
                        {
                            "path": "js/press.js",
                            "src": "/source/apps/jadedemo/com/press.coffee"
                        }
                    ],
                    "css": [
                        {
                            "src": "/source/apps/jadedemo"
                        }
                    ]
                },
                {
                    "route": "^\\/(?:home)?|^$",
                    "public": "/",
                    "view" : "home",
                    "data" : {
                        "url" : "http://localhost:1923/data/home.json"
                    
                    },
                    "js": [
                        {
                            "path": "js/home.js",
                            "src": "/source/apps/jadedemo/com/home.coffee"
                        }
                    ],
                    "css": [
                        {
                            "src": "/source/apps/jadedemo"
                        }
                    ]
                }
            ]
        }
    ]
}